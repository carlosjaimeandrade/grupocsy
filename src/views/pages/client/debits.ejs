<%- include('../client/partials/header', {title: 'Soldiers Construções' }) %>

    <main id="debts">

        <%- include('../client/partials/user') %>
        <%- include('../client/partials/modalDel') %>

        <div class="titlePage">
            <div class="titlePage-container">
                <h1>Débitos</h1>
                <span>Débitos cadastrados</span>
            </div>
        </div>

        <!-- Filtros e btns-->
        <form method="get">
            <div class="action-container">
                <div class="action-content">
                    <div class="action-info">
                        <span>
                            <%= debts.length %> registros
                        </span>
                    </div>
                    <div class="action-press">
                        <% if(Object.keys(query).length> 0){%>
                            <span onclick="window.location.href='/cliente/debitos'" class="clear-search">
                                <ion-icon name="close-circle-outline"></ion-icon>
                            </span>
                        <% }%>
                        <div>
                            <select name="status" id="">
                            <option value="">Todos registros</option>
                            <option <%= query.status=="pendente" ?" selected" :""%>  value="pendente">Pendente</option>
                            <option <%= query.status=="approved" ?" selected" :""%>  value="approved">Aprovado</option>
                        </select>
                        </div>
                        <div>
                            <input value="<%= query.charge %>" placeholder="Nome do débito" name="charge" type="text">
                            <button><i class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                        <button type="button" onclick="newModal()"><i class="fa-solid fa-plus"></i> Solicitar débito</button>
                    </div>
                </div>
            </div>
        </form>
        <!-- modal de view -->
        <form method="post">
            <div new-modal-edit class="new-modal-container">
                <i close-edit class="fa-solid fa-xmark modal-modal-close"></i>
                <div class="new-modal-content">
                    <div class="new-modal-header">
                        <h2>Editar débito</h2>
                        <div class="btn-modal">
                            <button publicar onclick="loading(event)">Atualizar</button>
                        </div>
                    </div>
                    <div new-modal-import class="new-modal-main">

                    </div>
                </div>
            </div>
        </form>   
        <!-- modal de solicitação de debitos -->
        <form method="post">
            <div new-modal class="new-modal-container">
                <i close-modal class="fa-solid fa-xmark modal-modal-close"></i>
                <div class="new-modal-content">
                    <div class="new-modal-header">
                        <h2>Nova solicitação de pagamento</h2>
                        <div class="btn-modal">
                            <button publicar onclick="loading(event)">Solicitar</button>
                        </div>
                    </div>
                    <div class="new-modal-main">
                        <div class="entry-content">
                            <div class="entry-value entry-bd-2">
                                <i class="fa-solid fa-file-signature"></i>
                                <input required type="text" name="local" placeholder="Local da obra">
                            </div>
                            <div class="entry-value entry-bd-2">
                                <i class="fa-solid fa-file-signature"></i>
                                <input required type="text" name="descricao" placeholder="Descrição da cobraça">
                            </div>
                            <div class="entry-value entry-bd-2">
                                <i class="fa-solid fa-file-signature"></i>
                                <input type="text" name="obs" placeholder="Observaçõs">
                            </div>
                            <div class="entry-value entry-bd-2">
                                <i class="fa-solid fa-location-pin"></i>
                                <input type="text" name="endereco" placeholder="Endereço">
                            </div>
                            <div class="entry-value entry-bd-2">
                                <i class="fa-solid fa-sack-dollar"></i>
                                <input required type="text" name="valor" placeholder="Valor combinado da cobrança" onKeyUp="mascaraMoeda(this, event)">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- listagem dos dados -->
        <div id="financeiro" class="list-container">
            <div class="list-content">
                <div class="list-title">
                    <h4>Todas os débitos</h4>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Vencimento</th>
                            <th>Valor</th>
                            <th>Juros atraso dia (0,02%)</th>
                            <th>Multa atraso (2,00%)</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% debts.forEach(debt=>{%>
                            <tr>
                                <td><%= debt.charge %></td>
                                <td><%= debt.description %></td>
                                <td><%= `${debt.dueDate.split('-')[2]}/${debt.dueDate.split('-')[1]}/${debt.dueDate.split('-')[0]}` %></td>
                                <td><%= debt.value.toLocaleString()  %></td>
                                <td><%= debt.status == "approved" ? "-" : debt.juros.toLocaleString() %> </td>
                                <td><%= debt.status == "approved" ? "-" : debt.multa.toLocaleString() %> </td>
                                <td>
                                    <div>
                                        <p><%= debt.status == "approved" ? "pago" : "pendente" %></p>
                                    </div>   
                                </td>
                                <td>
                                    <% if(debt.status != "approved"){ %>
                                        <a class="pay-btn" href="/cliente/debitos/checkout/<%= debt.id %>"><i class="fa-regular fa-credit-card"></i></a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <!--  mensagem  -->
        <% if(message !="" ) {%>
            <div class="alert alert-<%= type %>">
                <span> <%= message %></span> <i onclick="closeAlert(event)" class="fa-solid fa-xmark"></i>
            </div>
        <% } %>

    </main>
    
<%- include('../admin/partials/footer.ejs') %>

<script src="/lib/tinymce/tinymce.min.js"></script>
<script src="/js/modalNew.js "></script>
<script src="/js/modalDel.js"></script>
<script src="/js/loading.js"></script>
<script src="/js/Alert.js"></script>
<script src="/js/mask.js"></script>       