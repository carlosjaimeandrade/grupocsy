<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/lib/fontawesome-free-6.1.1-web/css/all.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap" rel="stylesheet">
    <title>
        Login
    </title>
</head>

<body>
    <form action="" method="post">
        <div class="login-container">
            <div class="login-banner">
                <img src="/img/banner.png" alt="">
            </div>
            <div class="login-entry">
                <div class="login-content-create ">
                    <div class="login-logo">
                        <img src="/img/logo2.png" alt="">
                    </div>
                    <div class="login-input">
                        <i class="fa-solid fa-user"></i>
                        <input name="name" required type="text" placeholder="Nome">
                    </div>
                    <div class="login-input">
                        <i class="fa-solid fa-envelope"></i>
                        <input name="email" required type="email" placeholder="E-mail">
                    </div>
                    <div class="login-input">
                        <i class="fa-solid fa-phone"></i>
                        <input name="telephone" onkeyup="mascara('(##) ####-####',this,event,false)" maxlength="14" type="text" placeholder="Telefone">
                    </div>
                    <div class="login-input">
                        <i class="fa-solid fa-location-dot"></i>
                        <select name="uf" uf-select required import-city type="text" placeholder="uf" name="">
                            <option value="">UF</option>
                        </select>
                    </div>
                    <div city-select class="login-input display-none ">
                        <i class="fa-solid fa-location-dot"></i>
                        <select name="city" city-select-import required import-city type="text" placeholder="Cidade" name="" id="">
                            <option value="">Cidade</option>
                        </select>
                    </div>
                    <div class="login-input">
                        <i class="fa-solid fa-id-card"></i>
                        <input name="cpf" required onkeyup="mascara('###.###.###-##',this,event,false)" maxlength="14" type="text" placeholder="CPF">
                    </div>
                    <div class="login-input">
                        <i class="fa-solid fa-id-card"></i>
                        <input name="rg" required onkeyup="mascara('##.###.###-#',this,event,false)" maxlength="12" type="text" placeholder="RG">
                    </div>
                    <div class="login-input">
                        <i class="fa-solid fa-lock"></i>
                        <input name="password" required type="password" placeholder="Password">
                        <i view-password class="fa-solid fa-eye"></i>
                    </div>
                    <div class="login-access">
                        <button onclick="loading(event)">Cadastrar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <% if(message != "") {%>
        <div class="alert alert-<%= type %>">
            <span><%= message %></span> <i onclick="closeAlert(event)" class="fa-solid fa-xmark"></i>
        </div>
        <% } %>



</body>

</html>



<script src="/js/mask.js"></script>
<script src="/js/login.js"></script>
<script src="/js/loading.js"></script>
<script src="/js/alert.js"></script>
<script src="/js/loginCreate.js"></script>