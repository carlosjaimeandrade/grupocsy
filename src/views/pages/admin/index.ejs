<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/publication.css">
    <link rel="stylesheet" href="/lib/fontawesome-free-6.1.1-web/css/all.css">
    <title>Document</title>
</head>

<body>
    <header>
        header
    </header>
    <main>

        <div new-post class="new-post-container">
            <div class="new-post-content">
                <div class="new-post-header">
                    <h2>Nova publicação</h2>
                    <i close class="fa-solid fa-xmark"></i>
                </div>
                <div class="new-post-main">
                    <textarea id="post" name=""></textarea>
                </div>
            </div>
        </div>

        <div>
            <span btn-change id="debits">Débitos</span>
            <span btn-change id="publication">Publicações</span>
            <span btn-change id="users">Usuários</span>
        </div>

        <div import-ejs>
            <%- include('./debits.ejs') %>
        </div>

    </main>
    <footer>
        footer
    </footer>

</body>

</html>

<script>
    const btn_change = document.querySelectorAll('[btn-change]')
    const import_ejs = document.querySelector('[import-ejs]')
    btn_change.forEach(btn => {
        btn.onclick = (e) => {
            const view = e.target.id
            switch (view) {
                case "users":
                    import_ejs.innerHTML = `<%- include('./users.ejs') %>`
                    break
                case "publication":
                    import_ejs.innerHTML = `<%- include('./publication.ejs') %>`
                    break
                default:
                    import_ejs.innerHTML = `<%- include('./debits.ejs') %>`
            }
        }
    })
</script>


<script src="/lib/tinymce/tinymce.min.js"></script>
